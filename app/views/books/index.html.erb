<h1 class="titulo">Books</h1>

<br>

<% if logged_in? %>
<div style="text-align: right">
  New Book <a class="nuevo" href="<%= new_book_path %>"><%= fa_icon "plus-circle" %></a><br><br>
</div>
<% end %>
<% if @books.empty?%>
      <div class="alert alert-danger" role="alert" style="text-align: left">
        <font color="#C20C0C"><b>
          <% if logged_in? %>
            You haven't assigned any book at this time.
          <% else %>
            Currently there are no books available.
          <% end %>
        </font></b>
      </div>
<% else %>
  <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Author</th>
          <% if logged_in? %>
            <th colspan="3"></th>
          <% else %>
            <th colspan="1"></th>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><%= book.name %></td>
            <td><%= book.author %></td>
            <td><a class="mostrar" title="Show" href="<%= book_path(book) %>"><%= fa_icon "eye" %></a></td>
            
            <% if logged_in? %>
            <td><a class="editar" title="Edit" href="<%= edit_book_path(book) %>"><%= fa_icon "pencil" %></a></td>
            <td><a class="borrar" title="Delete" href="<%= book_path(book) %>" data-confirm="Are you sure?" rel="nofollow" data-method="delete" ><%= fa_icon "trash" %></a></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>

<br>